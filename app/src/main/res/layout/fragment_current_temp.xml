<?xml version="1.0" encoding="utf-8"?>
<com.blackcj.core.view.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/observable_scroll_view"
    android:fillViewport="true"
    android:scrollbars="none"
    android:fadingEdge="none"
    android:background="@color/orange"
    tools:context=".fragment.CurrentTempFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="810dp"
        android:id="@+id/scrolling_content"
        android:background="@color/red8">

        <com.blackcj.core.view.ResizableRelativeLayout
            android:id="@+id/temp_layout"
            android:layout_width="match_parent"
            custom:minLayoutHeight="55dp"
            custom:maxLayoutHeight="150dp"
            custom:shadowPadding="20dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/thermostat_icon"
                style="@style/CurrentImage.Temp"
                android:contentDescription="@string/temp_icon_description"/>
            <TextView
                android:id="@+id/current_temperature_text"
                android:layout_toEndOf="@id/thermostat_icon"
                android:layout_toRightOf="@id/thermostat_icon"
                style="@style/TextAppearance.LargeHeadingText.Temp"
                tools:text="@string/placeholder_temp"/>
        </com.blackcj.core.view.ResizableRelativeLayout>
        <com.blackcj.core.view.ResizableRelativeLayout
            android:id="@+id/humidity_layout"
            android:layout_width="match_parent"
            custom:minLayoutHeight="70dp"
            custom:shadowPadding="20dp"
            custom:maxLayoutHeight="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/top_drop_shadow">
            <ImageView
                android:id="@+id/humidity_icon"
                style="@style/CurrentImage.Humidity"
                android:contentDescription="@string/humidity_icon_description"/>
            <TextView
                android:id="@+id/current_humidity_text"
                android:layout_toRightOf="@+id/humidity_icon"
                android:layout_toEndOf="@id/humidity_icon"
                style="@style/TextAppearance.LargeHeadingText.Humidity"
                tools:text="@string/placeholder_humidity"/>
        </com.blackcj.core.view.ResizableRelativeLayout>
        <com.blackcj.core.view.ResizableRelativeLayout
            android:id="@+id/light_layout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="280dp"
            custom:minLayoutHeight="70dp"
            custom:maxLayoutHeight="170dp"
            custom:shadowPadding="20dp"
            android:background="@drawable/top_drop_shadow">
            <ImageView
                android:id="@+id/light_icon"
                style="@style/CurrentImage.Light"
                android:contentDescription="@string/power_icon_description"/>
            <TextView
                android:id="@+id/current_light_text"
                android:layout_toRightOf="@+id/light_icon"
                android:layout_toEndOf="@id/light_icon"
                style="@style/TextAppearance.LargeHeadingText.Light"
                tools:text="@string/placeholder_light"
                android:text="@string/placeholder_light"/>
        </com.blackcj.core.view.ResizableRelativeLayout>
        <com.blackcj.core.view.ResizableRelativeLayout
            android:id="@+id/sun_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="430dp"
            android:layout_height="380dp"
            custom:minLayoutHeight="380dp"
            custom:maxLayoutHeight="380dp"
            android:background="@drawable/top_drop_shadow">
            <RelativeLayout
                android:id="@+id/sun_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red8"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sun"
                    android:contentDescription="@string/sun_icon_description"/>
            </RelativeLayout>
        </com.blackcj.core.view.ResizableRelativeLayout>

    </RelativeLayout>
</com.blackcj.core.view.ObservableScrollView>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    android:id="@+id/swipeRefreshLayout_listView"
    tools:context=".MainActivity$PlaceholderFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/thermostat_icon"
                style="@style/CurrentImage.Temp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_toEndOf="@id/thermostat_icon"
                android:layout_toRightOf="@id/thermostat_icon"
                android:id="@+id/current_temperature_text"
                android:background="@color/orange"
                android:layout_height="150dp"
                android:textColor="@color/white"
                android:textSize="80sp"/>
            <ImageView
                android:id="@+id/humidity_icon"
                style="@style/CurrentImage.Humidity"
                android:layout_below="@id/thermostat_icon"
                android:contentDescription="@string/humidity_icon_description"/>
            <TextView
                android:layout_below="@id/current_temperature_text"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/humidity_icon"
                android:layout_toEndOf="@id/humidity_icon"
                android:gravity="center"
                android:id="@+id/current_humidity_text"
                android:background="@color/purple"
                android:layout_height="150dp"
                android:textColor="@color/white"
                android:textSize="80sp"/>
            <ImageView
                android:id="@+id/light_icon"
                style="@style/CurrentImage.Light"
                android:layout_below="@id/humidity_icon"
                android:contentDescription="@string/humidity_icon_description"/>
            <TextView
                android:layout_below="@id/current_humidity_text"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/humidity_icon"
                android:layout_toEndOf="@id/humidity_icon"
                android:gravity="center"
                android:text="OFF"
                android:id="@+id/current_light_text"
                android:background="@color/green10"
                android:layout_height="150dp"
                android:textColor="@color/white"
                android:textSize="80sp"/>
        </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>

<resources>

    <!-- Unused root for all text appearances -->
    <style name="TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_h1</item>
    </style>

    <style name="DrawerItem">
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/activated_background</item>
    </style>

    <style name="TextAppearance.DrawerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingLeft">@dimen/margin_extra_small</item>
    </style>

</resources>

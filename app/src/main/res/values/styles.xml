<resources>

    <!-- Unused root for all text appearances -->
    <style name="TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_h1</item>
    </style>

    <style name="DrawerItem">
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/activated_background</item>
    </style>

    <style name="TextAppearance.DrawerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingLeft">@dimen/margin_extra_small</item>
    </style>

    <style name="CurrentImage">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="CurrentImage.Temp">
        <item name="android:background">@color/orange12</item>
        <item name="android:src">@drawable/thermostat_icon</item>
    </style>

    <style name="CurrentImage.Humidity">
        <item name="android:background">@color/purple13</item>
        <item name="android:src">@drawable/drop_icon</item>
    </style>

    <style name="CurrentImage.Light">
        <item name="android:background">@color/green11</item>
        <item name="android:src">@drawable/ic_light</item>
    </style>



</resources>
